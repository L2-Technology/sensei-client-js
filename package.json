{
  "name": "@l2-technology/sensei-client",
  "version": "0.1.3",
  "description": "A javascript client for the Sensei HTTP API",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "homepage": "https://github.com/L2-Technology/sensei-client-js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/L2-Technology/sensei-client-js.git"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "test": "jest --config jestconfig.json"
  },
  "files": [
    "lib/**/*"
  ],
  "author": "John Cantrell <john@l2.technology>",
  "license": "ISC",
  "keywords": [
    "l2",
    "sensei",
    "lightning",
    "bitcoin"
  ],
  "dependencies": {
    "cross-fetch": "^3.1.5"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "jest": "^27.5.0",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.5"
  }
}
