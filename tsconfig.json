{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es2015",
    "target": "ES6",
    "lib": ["es2017"],
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types"],
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
